# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_GUILD_ID=your_discord_guild_id_here

# Minecraft Server Configuration
MC_SERVER_IP=your_minecraft_server_ip_here
MC_SERVER_PORT=25565
MC_SERVER_TYPE=java
MC_SERVER_NAME=Your Minecraft Server
MC_SERVER_VERSION=1.20.4
MC_SERVER_ICON=https://i.imgur.com/6Msem8Q.png
MC_SERVER_SITE=https://your-minecraft-server-website.com

# Channel Configuration
STATS_CHANNEL_ID=your_stats_channel_id_here

# Language Settings
LANGUAGE_MAIN=en

# Status Update Settings
# Note: In development/test environments, UPDATE_INTERVAL will be automatically set to 30 seconds
# In production, it must be at least 60 seconds
AUTO_CHANGE_STATUS_ENABLED=true
UPDATE_INTERVAL=60
ADMIN_ONLY=false
PLAYER_AVATAR_EMOJI=true
IS_ONLINE_CHECK=true

# Player Count Channel Settings
# Note: In development/test environments, PLAYER_COUNT_UPDATE_INTERVAL will be automatically set to 30 seconds
# In production, it must be at least 60 seconds
PLAYER_COUNT_ENABLED=true
PLAYER_COUNT_UPDATE_INTERVAL=60

# Node Environment (controls logging level)
# Options: development, test, production, docker
# development: TRACE level logs (most verbose)
# test: DEBUG level logs
# production: INFO level logs (recommended for production)
# docker: INFO level logs
NODE_ENV=production

# Other Settings
INVITE_LINK_ENABLED=true
TIMEZONE=UTC 