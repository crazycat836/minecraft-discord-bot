# Discord Bot Configuration
DISCORD_BOT_TOKEN=           # Required: Your Discord Bot Token
DISCORD_GUILD_ID=           # Required: Your Discord Server ID

# Minecraft Server Configuration
MC_SERVER_IP=              # Required: Your Minecraft Server IP
MC_SERVER_PORT=25565       # Optional: Default is 25565
MC_SERVER_TYPE=java        # Optional: 'java' or 'bedrock', default is 'java'
MC_SERVER_NAME=            # Required: Your Minecraft Server Name
MC_SERVER_VERSION=         # Required: Your Minecraft Server Version
MC_SERVER_ICON=           # Optional: Server Icon URL
MC_SERVER_SITE=           # Optional: Server Website URL

# Channel Configuration
STATS_CHANNEL_ID=         # Required: Channel ID for player count stats

# Language Settings
LANGUAGE_MAIN=en          # Optional: Default is 'en', available: 'en', 'es', 'de', 'fr', 'pt', 'ru', 'uk', 'zh-TW'
LANGUAGE_EMBEDS=          # Optional: Leave empty to follow LANGUAGE_MAIN
LANGUAGE_AUTO_REPLY=      # Optional: Leave empty to follow LANGUAGE_MAIN
LANGUAGE_CONSOLE_LOG=     # Optional: Leave empty to follow LANGUAGE_MAIN
LANGUAGE_SLASH_CMDS=      # Optional: Leave empty to follow LANGUAGE_MAIN

# Status Update Settings
AUTO_CHANGE_STATUS_ENABLED=true    # Optional: Default is true
UPDATE_INTERVAL=60                 # Optional: Default is 60 seconds
ADMIN_ONLY=true                   # Optional: Default is true
PLAYER_AVATAR_EMOJI=true          # Optional: Default is true
IS_ONLINE_CHECK=true              # Optional: Default is true

# Player Count Channel Settings
PLAYER_COUNT_ENABLED=true         # Optional: Default is true
PLAYER_COUNT_UPDATE_INTERVAL=60   # Optional: Default is 60 seconds
ONLINE_TEXT=                      # Optional: Leave empty to use language translation
OFFLINE_TEXT=                     # Optional: Leave empty to use language translation

# Debug Settings
DEBUG_MODE=false                  # Optional: Default is false
INVITE_LINK_ENABLED=true         # Optional: Default is true
ERROR_LOGGING_ENABLED=true       # Optional: Default is true
SERVER_INFO_LOGGING_ENABLED=true # Optional: Default is true

# Other Settings
TIMEZONE=UTC 